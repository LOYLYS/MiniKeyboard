<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#EDEDED"
    android:orientation="vertical">

    <View
        android:id="@+id/view_background_top"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        app:layout_constraintBottom_toTopOf="@id/keyboard_view"/>

    <com.matech.minikeyboard.keyboard.KeyboardView
        android:id="@+id/keyboard_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:keyBackground="@drawable/keyboard_key_background"
        app:keyTextColor="@color/black"
        app:keyTextSize="16sp"
        app:labelTextSize="14sp"
        app:popupLayout="@layout/keyboard_popup_keyboard"
        app:layout_constraintBottom_toBottomOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
